<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tp.lh150094.asynctask.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/status"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:text="Traitement d'image" />

        <Button
            android:id="@+id/nvGris"
            android:onClick="toNvGris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Niveau de gris" />

        <Button
            android:id="@+id/pixelisation"
            android:onClick="pixeliseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prixelisation" />

        <Button
            android:id="@+id/quitter"
            android:onClick="quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="quitter" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:onClick="changerImage"
             />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
