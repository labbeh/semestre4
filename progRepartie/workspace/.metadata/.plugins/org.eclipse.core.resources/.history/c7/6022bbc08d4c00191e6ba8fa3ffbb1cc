public class Controleur {
	/**
	 * Instance vers l'ihm
	 * */
	private Fenetre ihm;
	
	
	public Controleur(){
		init();
	}
	
	/**
	 * Initialise l'application
	 * */
	public void init(){
		// instanciation des listener
		EnvoieMessage listenerMsg = new EnvoieMessage();
		
		// instanciation de l'ihm
		ihm = new Fenetre();
		
		// on met en place les Ã©couteurs
		ihm.setEcouteurEnvoieMsg(listenerMsg);
	}

	public void envoyerMessage(String text) {
		
	}
	
	
}
