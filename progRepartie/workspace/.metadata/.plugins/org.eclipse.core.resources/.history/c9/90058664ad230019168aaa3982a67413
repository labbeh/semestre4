package tp2.prodCons;

public class Lanceur {

	/**
	 * @param args
	 * @throws InterruptedException 
	 */
	public static void main(String[] args) throws InterruptedException {
		Buffer b = new Buffer() ;
		
		Producteur p1 = new Producteur(b) ;
		Producteur p2 = new Producteur(b) ;
		Producteur p3 = new Producteur(b) ;
		Consommateur c1 = new Consommateur(b) ;
		Consommateur c2 = new Consommateur(b) ;
		Consommateur c3 = new Consommateur(b) ;
		
		p1.start() ;p2.start() ;p3.start() ;
		c1.start() ;c2.start() ;c3.start() ;
	}

}
