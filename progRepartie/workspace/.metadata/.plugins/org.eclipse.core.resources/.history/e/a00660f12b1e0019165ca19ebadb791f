package tp2;

public class Enfant extends Thread {
	private static int nbInstance = 0;
	
	private Bonbonniere b;
	private int id;
	
	public Enfant(Bonbonniere b) {
		this.b = b;
		this.id = ++nbInstance;
	}
	
	@Override
	public void run(){
		int bonbon = b.attraperBonbon();
		
		while(bonbon != 0){
			System.out.println("enfant " +id+ "bonbon: " +bonbon);
		}
	}

}
